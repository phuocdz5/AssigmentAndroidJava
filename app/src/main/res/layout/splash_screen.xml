<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background_main">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:src="@drawable/img"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPOLY SOFTWARE COMPANY"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ios"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/android"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/code"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/unity"
            android:layout_marginEnd="5dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/flluter"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FACULTY OF INFORMATION TECHNOLOGY"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONNECT"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="the"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:fontFamily="@font/fzbelovedscript"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FUTURE"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="caodang.fpt.edu.vn"
        android:textColor="@color/black"
        android:letterSpacing="0.5"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:id="@+id/backgroundSpl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="35dp"
        android:background="@drawable/background_splash_2">
        <Button
            android:id="@+id/btnLoginSplash"
            android:text="Login"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="@color/white"
            android:background="@drawable/button_ql1"/>
        <Button
            android:id="@+id/btnSignUpSplash"
            android:text="SignUp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_ql1"/>
    </LinearLayout>
</LinearLayout>